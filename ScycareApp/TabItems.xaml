<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:ScycareApp"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="ScycareApp.TabItems"
            Shell.NavBarIsVisible="False"
            Title="TabItems">
    <TabBar>
        <Tab Icon="tabhome.png">
            <ShellContent ContentTemplate="{DataTemplate local:Home}"/>
        </Tab>
        <Tab Icon="addbtn.png">
            <ShellContent ContentTemplate="{DataTemplate local:Register}"/>
        </Tab>
        <Tab Icon="caticon.png">
            <ShellContent ContentTemplate="{DataTemplate local:VerifyCode}"/>
        </Tab>
        <Tab Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate local:ForgetPassword}"/>
        </Tab>

    </TabBar>

</Shell>
